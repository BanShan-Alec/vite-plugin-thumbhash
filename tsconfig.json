{
  "compilerOptions": {
    "declaration": true,
    // "declarationDir": "dist/types",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "esnext",
    ],
    /* Linting */
    "strict": true,
  },
  "include": [
    "src/*.ts",
    "types/*.d.ts"
  ]
}